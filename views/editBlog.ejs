
<% include partials/header %>
    
<div class="row">
    <h1 style="text-align: center">Edit Blog</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/<%= blog._id %>?_method=PUT" method="post">
            <div class="form-group">
                <label>Title</label>
                <input class="form-control" type="text" name="blog[title]" value=" <%= blog.title%> ">
            </div>
            <div class="form-group">
                <label>Image</label>
                <input class="form-control" type="text" name="blog[image]" value=" <%= blog.image %> ">
            </div>
            <div class="form-group">
                <label>Blog Content</label>
                <textarea class="form-control" name="blog[content]"> <%= blog.content %> </textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
    </div>
</div>

<% include partials/footer %>

